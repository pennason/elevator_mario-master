<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shmashine.pm.api.dao.TblSensorConfigDao">

    <resultMap type="com.shmashine.pm.api.entity.TblSensorConfig" id="TblSensorResultMap">

        <result property="vSensorConfigId" column="v_sensor_config_id" jdbcType="VARCHAR"/>
        <result property="vSensorName" column="v_sensor_name" jdbcType="VARCHAR"/>
        <result property="dtCreateTime" column="dt_create_time" jdbcType="TIMESTAMP"/>
        <result property="dtModifyTime" column="dt_modify_time" jdbcType="TIMESTAMP"/>
        <result property="vCreateUserId" column="v_create_user_id" jdbcType="VARCHAR"/>
        <result property="vModifyUserId" column="v_modify_user_id" jdbcType="VARCHAR"/>
        <result property="iDelFlag" column="i_del_flag" jdbcType="INTEGER"/>
        <result property="vSensorType" column="v_sensor_type" jdbcType="VARCHAR"/>
        <result property="vSensorId" column="v_sensor_id" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="fieldSet">
        v_sensor_config_id
        , v_sensor_name, dt_create_time, dt_modify_time, v_create_user_id, v_modify_user_id, i_del_flag, v_sensor_type, v_sensor_id
    </sql>

    <select id="selectBySensorType" parameterType="java.lang.String" resultMap="TblSensorResultMap">
        select
        <include refid="fieldSet"/>
        from
        tbl_sensor_config
        where
        v_sensor_type like concat('%', #{sensorType, jdbcType=VARCHAR}, '%')
    </select>
</mapper>