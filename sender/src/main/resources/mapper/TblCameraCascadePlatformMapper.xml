<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shmashine.sender.dao.TblCameraCascadePlatformMapper">
    <sql id="TABLE_NAME">
        tbl_camera_cascade_platform
    </sql>

    <sql id="ALL_COLUMNS">
        id
        , cloud_number, platform_id, platform_name, sup_or_sub, elevator_code, camera_type, channel_id, channel_no, channel_code, create_time, modify_time
    </sql>

    <!-- 查询 -->
    <select id="getByElevatorCode" resultType="com.shmashine.common.entity.TblCameraCascadePlatformEntity">
        SELECT
        <include refid="ALL_COLUMNS"/>
        FROM
        <include refid="TABLE_NAME"/>
        WHERE elevator_code = #{elevatorCode}
        ORDER BY id DESC
    </select>
    <select id="getByCloudNumberAndPlatformId" resultType="com.shmashine.common.entity.TblCameraCascadePlatformEntity">
        SELECT
        <include refid="ALL_COLUMNS"/>
        FROM
        <include refid="TABLE_NAME"/>
        where cloud_number = #{cloudNumber} and platform_id = #{platformId}
    </select>
</mapper>