    <properties>
        <spring.boot.version>2.7.18</spring.boot.version>
        <spring-boot-admin-starter-client.version>2.7.16</spring-boot-admin-starter-client.version>
        <java.version>21</java.version>
        <skywalking.version>8.11.0</skywalking.version>
        <springdoc.openapi.version>1.6.11</springdoc.openapi.version>
        <cn.hutool.version>5.8.25</cn.hutool.version>
