        <mapstruct.version>1.5.0.Final</mapstruct.version>

        <shmashine-components-dto.version>1.0.17-SNAPSHOT</shmashine-components-dto.version>
    </properties>

    <modules>
        <module>common</module>
        <module>eureka</module>
        <module>gateway</module>
        <module>api</module>
        <module>socket</module>
        <module>fault</module>
